<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Snake</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Snake.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Nav -->
    <nav>
        <a class="logo" href="/">
            <img src="~/assets/snakeLogo.svg" alt="Logo">
        </a>
        <div class="pauseBtn">
            <span>Pause</span>
        </div>
    </nav>

    <!-- Main -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <span class="followUsTxt">Follow us</span>
        <div class="socialMedia">
            <a href="/">
                <img src="~/assets/linkedIn.svg" alt="LinkedIn" />
            </a>
            <a href="/">
                <img src="~/assets/gitHub.svg" alt="GitHub" />
            </a>
            <a href="/">
                <img src="~/assets/instagram.svg" alt="Instagram" />
            </a>
            <a href="/">
                <img src="~/assets/codepen.svg" alt="Codepen" />
            </a>
        </div>
        <div class="footerLinks">
            <a href="/"><span>Source Code</span></a>
            <a href="/"><span>Powered by .NET 6.2</span></a>
            <a href="/"><span>Submit Maintenance Ticket</span></a>
            <a href="/"><span>Support</span></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
